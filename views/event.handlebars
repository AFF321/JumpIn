<section class="event card card-body card-body-2">
  <div class="event-details">
    <section id="event-title">
    <h3>{{event.event_name}}</h3>
    <p>By: {{event.host_name}}</p>
    <p>Where:{{event.event_zip}} {{event.event_address}} , {{event.event_city}} ,{{event.evenmt_state}}</p>
    <p>when: {{event.event_date}}</p>
    <p>{{event.description}}</p>
    </section>
<section class="container"></section>
<ol>
{{#each event.partis as |parti|}}
<li> {{parti.user_name}}</li>
{{/each}}
</ol>
{{#if logged_in}}
<form id="joinevent">
  <input placeholder="enter name here" class="text form-input-2 form-input join-btn join"></input>
<button class='btn btn-primary join ' id="join-btn" type="submit">want to join? click here!</button> 
</form>
{{else}}
<p>Please <a href="/login"> LogIn to join event</a></p>
{{/if}}
</section>
  </div>
</section>


<script src="/js/joinevent.js"></script>